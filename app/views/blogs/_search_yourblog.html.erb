<div class="search_blog">
  <%= search_form_for @search, url: yourself_blog_blogs_path do |f| %>
    <h5>【検索フォーム】</h5>
    <div class="mb3">
      <%= f.label :drone_name,'機体で検索', class:"form-label" %>
      <%= f.search_field :drones_drone_name_cont, placeholder: '機体名', class:"form-control" %>
    </div>
    <div class="mb3">
      <%= f.label :pesticide_type, class:"form-label" %>
      <br>
      <%= f.radio_button :pesticide_type_eq, '', {:checked => true}%>指定なし
      <%= f.radio_button :pesticide_type_eq, 1%>液剤 
      <%= f.radio_button :pesticide_type_eq, 2%>液剤（肥料）
      <%= f.radio_button :pesticide_type_eq, 3%>粒剤 
      <%= f.radio_button :pesticide_type_eq, 4%>粒剤（肥料）
      <%= f.radio_button :pesticide_type_eq, 5%>その他 
    </div>

    <div class="mb3">
      <%= f.label :pesticide_name, class:"form-label" %>
      <%= f.search_field :pesticide_name_cont, placeholder: '農薬名', class:"form-control" %>
    </div>

    <div class="mb3">
      <%= f.label :crop, '作物で検索', class:"form-label" %>
      <%= f.select :crop_eq, Blog.crops.keys.map, include_blank:'選択してください' %>
      <%= f.search_field :variety_cont, placeholder: '品種 (例：コシヒカリ)', class:"form-control" %>
    </div>

    <div class="mb3">
      <%= f.label :content, class:"form-label" %>
      <%= f.search_field :content_cont, placeholder: '日記帳のキーワード検索', class:"form-control" %>
    </div>
    <br>
    <div class="row">
      <div class="col">
        <%= f.submit "検索", class:"btn btn-outline-dark w-100" %>
      </div>
      <div class="col">
        <%= button_tag 'リセット', type: 'reset', id: 'reset_button', class:"btn btn-outline-dark w-100" %>
      </div>
    </div>
  <% end %>
</div>