<h1>みんなの投稿</h1>

<% @blogs.each do |blog| %>
  <p>
    <% if blog.picture.present? %>
      <%= image_tag blog.picture.to_s %>
    <% else %>
      <%= image_tag 'no_image.png'%>
    <% end %>
  </p>

  <p>作業実施日</p>
  <%= blog.work_date %>

  <p>剤型</p>
  <%= blog.pesticide_type %>

  <p>散布農薬名</p>
  <%= blog.pesticide_name %>

  <p>散布対象作物</p>
  <%= blog.crop %>

  <p>品種名</p>
  <%= blog.variety %>

  <p>コメント</p>
  <%= truncate(blog.content, length: 30) %>
  
  <p>
    <%= link_to '編集', edit_blog_path(blog) %>
    <%= link_to '詳細', blog_path(blog) %>
    <%= link_to '削除', blog_path(blog), method: :delete, data:{confirm:'本当に削除しても良いですか？'} %>
  </p>
<% end %>

<%= link_to '新規投稿', new_blog_path %>