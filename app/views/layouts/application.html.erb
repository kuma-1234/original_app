<!DOCTYPE html>
<html>
  <head>
    <title>OriginalApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/b38f983302.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      <%= link_to 'みんなの投稿', blogs_path %>
      <%= link_to '新規投稿', new_blog_path %>
      <%= link_to '登録ユーザーの一覧', profiles_path %>
      <%= link_to 'マイページ', profiles_path(current_user) %>
      <%= link_to '登録ユーザーの一覧', profiles_path %>
      <%= link_to 'マイページ', profile_path(current_user.id) %>
      <% if current_user.admin? %>
        <%= link_to '管理者画面へ', rails_admin_path %>
      <% end %>
    <% else %>
      <%= link_to "新規登録", new_user_registration_path %>
      <%= link_to "ログイン", new_user_session_path %>
      <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>
      <%= link_to '管理者ログイン（閲覧用）', users_guest_admin_sign_in_path, method: :post %>
    <% end %>


    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
