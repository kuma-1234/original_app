<%= form_with(model: [blog, comment], local: false) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
    <p><%= comment.errors.count %>件のエラーがあります。</p>
      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="comment_field">
    <%= form.label :talk, class:"form-label" %>
    <%= form.text_area :talk, placeholder: "※誹謗中傷を含むコメントは禁止です※", class:"form-control"  %>
  </div>
  <div class="comment_actions">
    <%= form.submit "コメント投稿", class:"btn btn-outline-dark w-100" %>
  </div>
<% end %>