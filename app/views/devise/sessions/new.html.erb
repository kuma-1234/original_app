<h2><%= t('.sign_in') %></h2>
<div class="login_form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class:"form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス", class:"form-control" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワード", class:"form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('.sign_in'), class:"btn btn-outline-dark w-100" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
